{{#get "posts" include="tags,authors"  filter="tag:hash-course-id-9+tag:hash-lesson" limit="3" order="published_at asc"}} }}
{{#if posts}}
<section class="course-area pt-20 xl:pt-28">
   <div class="container mx-auto">
      <div class="section-title max-w-xl mb-6 lg:mb-16">
         <h4 class="font-serif text-4xl lg:text-5xl text-gray-800 font-bold mb-6">Learn all about the Unified Namespace</h4>
         <p class="text-lg text-gray-400 font-normal">Understand where the hype comes from, what's actually behind it, and how to leverage it as a manufacturing company.
         </p>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
         {{#foreach posts}}
         {{> cards/card-course}}
         {{/foreach}}
      </div>
   </div>
</section>
{{/if}}
{{/get}}
