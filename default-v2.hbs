<!--  Border/background highlight effect. Pepijn Peeters, April 2024  -->
<script>
    const selector = `
  .cases_item,
  .pricing-header_card,
  .testimonial-slider_slide-content-wrapper
`;
    const highlightColor = '#999'; // CSS color, so rgb() etc works too
    const backgroundHighlightColor = '#c2c2c222';
    const highlightScale = '80%';
    const defaultCornerBoost = '1px'; // Adjustable per element using attribute, e.g. data-corner-boost="2px"
    const enableAbove = 990;
    const cards = [...document.querySelectorAll(selector)];
    const pseudoSelector = selector
            .split(',')
            .map((s) => `${s}::before`)
            .join(',');
    cards.forEach((card) => {
        card.style.position = 'relative';
        const { border, borderRadius, padding, backgroundColor } =
                window.getComputedStyle(card);
        const [width, , ...color] = border.split(' ');
        card.style.setProperty(
                '--highlight-corner-boost',
                card.dataset.cornerBoost ?? defaultCornerBoost
        );
        card.style.setProperty('--highlight-radius', borderRadius);
        card.style.setProperty('--highlight-width', width);
        card.style.setProperty('--highlight-base-color', color.join(' '));
        card.style.setProperty(
                '--highlight-color',
                card.dataset.highlightColor ?? highlightColor
        );
        card.style.setProperty(
                '--background-highlight-color',
                card.dataset.backgroundHighlightColor ?? backgroundHighlightColor
        );
        card.style.setProperty('--highlight-x', `-100vw`);
        card.style.setProperty('--highlight-y', `-100vh`);
        card.style.overflow = 'hidden';
        card.style.border = 'none';
        card.style.padding = padding
                .split(' ')
                .map((v) => `calc(${v} + var(--highlight-width))`)
                .join(' ');
        if (card.dataset.highlightBackground !== undefined) {
            card.style.background = `radial-gradient(circle at var(--highlight-x) var(--highlight-y), var(--background-highlight-color), ${backgroundColor})`;
        }
    });
    const stylesheet = document.createElement('style');
    stylesheet.innerHTML = `
  ${pseudoSelector} {
    content: "";
    position: absolute;
    inset: calc(var(--highlight-corner-boost) * -1);
    border-radius: calc(var(--highlight-radius) + var(--highlight-corner-boost) * 2);
    padding: calc(var(--highlight-width) + var(--highlight-corner-boost));
    background: radial-gradient(${highlightScale} ${highlightScale} at var(--highlight-x) var(--highlight-y), var(--highlight-color), var(--highlight-base-color));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    z-index: 100;
    pointer-events: none;
  }
`;
    document.head.appendChild(stylesheet);
    let clientX = -window.innerWidth;
    let clientY = -window.innerHeight;
    let doEffect = window.innerWidth > enableAbove;
    function listener(event) {
        if (!doEffect) return;
        if (event.clientX && event.clientY) {
            clientX = event.clientX;
            clientY = event.clientY;
        }
        cards.forEach((card) => {
            const { left, top, width } = card.getBoundingClientRect();
            const scale = card.offsetWidth / width;
            const x = (clientX - left) * scale;
            const y = (clientY - top) * scale;
            card.style.setProperty('--highlight-x', `${x}px`);
            card.style.setProperty('--highlight-y', `${y}px`);
        });
    }
    window.addEventListener('scroll', listener);
    window.addEventListener('mousemove', listener);
    window.addEventListener('resize', () => {
        doEffect = window.innerWidth > enableAbove;
        if (!doEffect) {
            cards.forEach((card) => {
                card.style.setProperty('--highlight-x', `-100vw`);
                card.style.setProperty('--highlight-y', `-100vh`);
            });
        }
    });
</script>
